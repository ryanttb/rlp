# Copy this file to terraform.tfvars and update with your values
project_id = "your-gcp-project-id"
region     = "us-central1"
zone       = "us-central1-a"
db_password = "your-secure-database-password"
environment = "dev"

# Development Database Configuration
enable_dev_instance = true
dev_authorized_networks = ["0.0.0.0/0"]  # WARNING: This allows all IPs - restrict for production!

# Production Database Configuration
enable_prod_instance = false  # Set to true when ready for production
prod_tier = "db-f1-micro"     # Use larger tier for production (e.g., db-n1-standard-1)
prod_deletion_protection = true

# Example configurations:

# Development only:
# enable_dev_instance = true
# enable_prod_instance = false

# Production only:
# enable_dev_instance = false
# enable_prod_instance = true
# prod_tier = "db-n1-standard-1"

# Both environments:
# enable_dev_instance = true
# enable_prod_instance = true 